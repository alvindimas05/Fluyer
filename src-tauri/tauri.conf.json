{
	"$schema": "https://schema.tauri.app/config/2.0.0",
	"productName": "Fluyer",
	"version": "1.1.0",
	"identifier": "org.alvindimas05.fluyer",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../build"
	},
	"app": {
		"windows": [
			{
				"title": "Fluyer",
				"width": 1200,
				"height": 675,
				"resizable": true,
				"titleBarStyle": "Overlay",
				"hiddenTitle": true,
				"visible": false,
				"decorations": false,
				"transparent": true,
				"shadow": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"macOS": {
			"signingIdentity": "-",
			"hardenedRuntime": false
		},
		"active": true,
		"targets": ["nsis", "dmg", "deb", "appimage"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
